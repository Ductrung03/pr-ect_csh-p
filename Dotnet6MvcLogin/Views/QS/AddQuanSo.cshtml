@model MvcLogin.Models.QuanSo
@using Dotnet6MvcLogin.Models.DTO;
@using Dotnet6MvcLogin.Repositories.Abstract;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc;
@using MvcLogin.Data;
@using MvcLogin.Models;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nhapqs.css">
</head>
<body>
    <div class="contact-container">
        <form action="" class="contact-left">
            <div class="grid-container">
                <div class="grid-column">
                    <input type="text" name="IDdv" placeholder="IDdv" class="contact-inputs" required>
                    <input type="text" name="Ngay" placeholder="Ngay" class="contact-inputs" required>
                    <input type="text" name="Tổng quân số" placeholder="Tổng quân số" class="contact-inputs" required>
                    <input type="text" name="Quân số vắng" placeholder="Quân số vắng" class="contact-inputs" required>
                    <input type="text" name="Đào ngũ" placeholder="Đào ngũ" class="contact-inputs" required>
                    <input type="text" name="Đi viện" placeholder="Đi viện" class="contact-inputs" required>
                    <input type="text" name="Đi bệnh xá" placeholder="Đi bệnh xá" class="contact-inputs" required>
                </div>
                <div class="grid-column">
                    <input type="text" name="Đi học" placeholder="Đi học" class="contact-inputs" required>
                    <input type="text" name="Đi thực tê" placeholder="Đi thực tê" class="contact-inputs" required>
                    <input type="text" name="Thực tập" placeholder="Thực tập" class="contact-inputs" required>
                    <input type="text" name="Đi tranh thủ" placeholder="Đi tranh thủ" class="contact-inputs" required>
                    <input type="text" name="Đi công tác" placeholder="Đi công tác" class="contact-inputs" required>
                    <input type="text" name="Thai sản" placeholder="Thai sản" class="contact-inputs" required>
                    <input type="text" name="Lý do khác" placeholder="Lý do khác" class="contact-inputs" required>
                </div>
                <div class="grid-column">
                    <input type="message" name="Chú thích" placeholder="Chú thích" class="contact-inputs" required>
                </div>
            </div>
            <button type="submit">Lưu </button>
        </form>
    </div>
</body>
</html>